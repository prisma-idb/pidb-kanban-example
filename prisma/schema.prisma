generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator prismaIDB {
  provider = "idb-client-generator"
  output   = "../src/lib/prisma-idb"
}

model Board {
  name  String @id
  tasks Task[]
}

model Task {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  boardName String
  board     Board   @relation(fields: [boardName], references: [name])
}
